{% extends 'base.html.twig' %}

{% block title %}Anlegen Offer{% endblock %}

{% block body %}

{% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('offer') }}
{% endblock %}

{% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('offer') }}
{% endblock %}

{% block menu %}

	{% include ('menu/menu.html.twig') %}

{% endblock %}

<div class="wrapper">
{{ dump(form.vars.value.customer) }}
    {{ form_start(form) }}
    	{{ form_row(form) }}
    {{ form_end(form) }}    
</div>
<tbody>

    {% for item in offers.orderListItems %}
    	<tr>
        	<td>{{ item.id }}</td>
        	<td>{{ item.productName }}</td>
        	<td>{{ item.productType }}</td>
        	
        	<td>{{ item.description }}</td>
        	<td>{{ item.taxRate }}</td>
        	<td>{{ item.price }}</td>
        	
        	<td><a href="{{ path('app_offer_editOffer', { id : item.id }) }}" class="list-group-item small">
        		<i class="fa fa-trash"></i>
        		<span style="font-size: 24px;">&#9997;</span>
    		</a></td>	
    		<td><a href="{{ path('app_offer_delOffer', { id : item.id }) }}" class="list-group-item small">
        		<i class="fa fa-trash"></i>
        		<span style="font-size: 24px;">&dagger;</span>
    		</a></td>	
        </tr>
    {% endfor %}
</tbody>
{% endblock %}

