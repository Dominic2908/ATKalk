{% extends 'base.html.twig' %}

{% block title %}Anlegen Offer{% endblock %}

{% block body %}

{% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('offer') }}
{% endblock %}

{% block javascripts %}
     {{ parent() }}
     {{ encore_entry_script_tags('offer') }}
{% endblock %}

{% block menu %}

	{% include ('menu/menu.html.twig') %}

{% endblock %}

<div class="wrapper">
    {{ form_start(form) }}
    	{{ form_row(form.customer_id) }}
    	{{ form_row(form.creation_date )}}
    	{{ form_row(form.order_list_number )}}
    	{{ form_row(form.expiry_date )}}
    	{{ form_row(form.tax_rate )}}
    	{{ form_row(form.price )}}
    {{ form_end(form) }}    
</div>
<tbody>
{{ dump(offers.orderListItems) }}
{{ offers.customer.id }}

    {% for item in offers %}
    	<tr>
        	<td>{{ item.customer.id }}</td>
        	<td>{{ item.creationDate |date("m/d/Y")}}</td>
        	<td>{{ item.orderListNumber }}</td>
        	<td>{{ item.expiryDate |date("m/d/Y")}}</td>
        	<td>{{ item.taxRate }}</td>
        	<td>{{ item.price }}</td>
        	
        	
        	<td><a href="{{ path('app_offer_editOffer', { id : item.id }) }}" class="list-group-item small">
        		<i class="fa fa-trash"></i>
        		<span style="font-size: 24px;">&#9997;</span>
    		</a></td>	
    		<td><a href="{{ path('app_offer_delOffer', { id : item.id }) }}" class="list-group-item small">
        		<i class="fa fa-trash"></i>
        		<span style="font-size: 24px;">&dagger;</span>
    		</a></td>	
        </tr>
    {% endfor %}
</tbody>
{% endblock %}

