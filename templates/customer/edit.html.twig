{% extends 'base.html.twig' %}

{% block title %}New Customer!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>New Customer Form! âœ…</h1>
	
    Customer:
    {{ form_start(form) }}
    <table>
    	<thead>
    		<tr>
        		<th> Anrede </th>
        		<th> Vorname </th>
        		<th> Nachnahme </th>
        		<th> Kundennummer </th>
        		<th> Geschlecht </th>
    		</tr>
		</thead>
		<tbody>
    		<tr>
        		<td> {{ form_row(form.salutation) }} </td>
        		<td> {{ form_row(form.name) }} </td>
        		<td> {{ form_row(form.prename) }} </td>
        		<td> {{ form_row(form.customerNumber) }} </td>
        		<td> {{ form_row(form.gender) }} </td>
    		</tr>
		</tbody>
		<thead>
			<tr>
        		<th> Strasse </th>
        		<th> Hausnummer </th>
        		<th> Postleitzahl </th>
        		<th> Stadt </th>
        		<th> Land </th>
    		</tr>
    	</thead>
    	<tbody>
    		<tr>
        		<td> {{ form_row(form.street) }} </td>
        		<td> {{ form_row(form.number) }} </td>
        		<td> {{ form_row(form.postalCode) }} </td>
        		<td> {{ form_row(form.city) }} </td>
        		<td> {{ form_row(form.country) }} </td>
    		</tr>
    	</tbody>
    </table>
    {{ form_end(form) }}   
</div>
            
{% endblock %}
