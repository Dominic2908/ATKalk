{% extends 'base.html.twig' %}
{% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('customerList') }}
{% endblock %}

{% block title %}Hello Customer!{% endblock %}

{% block body %}

{% block menu %}

	{% include ('menu/menu.html.twig') %}

{% endblock %}
<div class="example-wrapper">
    <h1>Hello Customer Form! âœ…</h1>
    Customer:
   
<table>
    <thead>
    		<tr>
        		<th> Anrede </th>
        		<th> Vorname </th>
        		<th> Nachnahme </th>
        		<th> Kundennummer </th>
        		<th> Strasse </th>
        		<th> Hausnummer </th>
        		<th> Postleitzahl </th>
        		<th> Stadt </th>
        		<th> Land </th>
        		<th> Bearbeiten </th>
    		</tr>
    </thead>
    <tbody>
        {% for item in customers %}
        	<tr>
            	<td>{{ item.salutation }}</td>
            	<td>{{ item.name }}</td>
            	<td>{{ item.prename }}</td>
            	<td>{{ item.customerNumber }}</td>
            	<td>{{ item.street }}</td>
            	<td>{{ item.number }}</td>
            	<td>{{ item.postalCode }}</td>
            	<td>{{ item.city }}</td>
            	<td>{{ item.country }}</td>
            	<td><a href="{{ path('edit_customer', { id : item.id }) }}" class="list-group-item small delete">
            		<i class="fa fa-trash"></i>
            		Customer bearbeiten
        		</a></td>	
        		<td><a href="{{ path('edit_customer', { id : item.id }) }}" class="list-group-item small delete">
            		<i class="fa fa-trash"></i>
            		Customer loeschen
        		</a></td>	
            </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}
