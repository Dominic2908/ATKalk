{% extends 'base.html.twig' %}
{% block stylesheets %}
     {{ parent() }}
     {{ encore_entry_link_tags('customer_list') }}
{% endblock %}
{% block title %}Hello Customer!{% endblock %}

{% block sideMenu %}
    <div class="card">
        <div class="card-header">
            <i class="fa fa-gear"></i>
            Options
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <a href="#" data-toggle="modal" data-target="#createScheduleModal">Create Schedule</a>
            </li>
        </ul>
    </div>
{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>Hello Customer Form! âœ…</h1>
    Customer:
    {{ knp_menu_render('main') }}
    {{ knp_menu_render('sidebar') }}
<table>
    <thead>
    		<tr>
        		<th> Anrede </th>
        		<th> Vorname </th>
        		<th> Nachnahme </th>
        		<th> Kundennummer </th>
        		<th> Strasse </th>
        		<th> Hausnummer </th>
        		<th> Postleitzahl </th>
        		<th> Stadt </th>
        		<th> Land </th>
        		<th> Bearbeiten </th>
    		</tr>
    </thead>
    <tbody>
        {% for item in customers %}
        	<tr>
            	<td>{{ item.salutation }}</td>
            	<td>{{ item.name }}</td>
            	<td>{{ item.prename }}</td>
            	<td>{{ item.customerNumber }}</td>
            	<td>{{ item.street }}</td>
            	<td>{{ item.number }}</td>
            	<td>{{ item.postalCode }}</td>
            	<td>{{ item.city }}</td>
            	<td>{{ item.country }}</td>
            	<td><a href="{{ path('edit_customer', { id : item.id }) }}" class="list-group-item small delete">
            		<i class="fa fa-trash"></i>
            		Customer bearbeiten
        		</a></td>	
        		<td><a href="{{ path('edit_customer', { id : item.id }) }}" class="list-group-item small delete">
            		<i class="fa fa-trash"></i>
            		Customer loeschen
        		</a></td>	
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
